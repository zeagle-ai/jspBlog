<!doctype html>
<html lang="en">
<head>
    <title>Josh Patterson Opus Blog</title>
    <link rel="apple-touch-icon" sizes="76x76" href="~/Template/assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="~/Template/assets/img/favicon.png">
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <!--     Fonts and icons     -->
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">
    <!-- Material Kit CSS -->
    <link rel="stylesheet" href="~/Template/assets/css/material-kit.css?v=2.0.6" />
    <link rel="stylesheet" type="text/css" href="~/Template/style.css">
    <!-- Prism CSS -->
    <link rel="stylesheet" type="text/css" href="~/Template/assets/css/prism.css" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-expand-lg bg-dark">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-translate">
                <div class="navbar-brand">Josh Patterson</div>
                <button class="navbar-toggler" type="button" data-toggle="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            Portfolio
                        </a>
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Contact", "Contact", "Home", null, htmlAttributes: new { @class = "nav-link"})
                    </li>
                    <!--Partial login here-->
                    @Html.Partial("_LoginPartial")
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-->
    </nav>
    @RenderBody()
    <footer class="footer footer-default">
        <div class="container">
            <nav class="float-left">
                <ul>
                    <li>
                        <a href="https://www.coderfoundry.com">
                            Coder Foundry
                        </a>
                    </li>
                </ul>
            </nav>
            <div class="copyright float-right">
                &copy;
                <script>
                    document.write(new Date().getFullYear())
                </script>, made with <i class="material-icons">favorite</i> by
                Josh Patterson for a better web.
            </div>
        </div>
    </footer>
    <!--   Core JS Files   -->
    <script src="~/Template/assets/js/core/jquery.min.js" type="text/javascript"></script>
    <script src="~/Template/assets/js/core/popper.min.js" type="text/javascript"></script>
    <script src="~/Template/assets/js/core/bootstrap-material-design.min.js" type="text/javascript"></script>
    <script src="~/Template/assets/js/plugins/moment.min.js"></script>
    <!--	Plugin for the Datepicker, full documentation here: https://github.com/Eonasdan/bootstrap-datetimepicker -->
    <script src="~/Template/assets/js/plugins/bootstrap-datetimepicker.js" type="text/javascript"></script>
    <!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
    <script src="~/Template/assets/js/plugins/nouislider.min.js" type="text/javascript"></script>
    <!-- Place this tag in your head or just before your close body tag. -->
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <!-- Control Center for Material Kit: parallax effects, scripts for the example pages etc -->
    <script src="~/Template/assets/js/material-kit.js?v=2.0.6" type="text/javascript"></script>
    <!-- Prism JS -->
    <script src="~/Template/assets/js/prism.js" type="text/javascript"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
